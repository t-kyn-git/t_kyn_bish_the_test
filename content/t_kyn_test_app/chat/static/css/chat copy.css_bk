body {
    background-color: #e5ddd5;
    font-family: Arial, sans-serif;
}

.chat-container {
    width: 400px;
    margin: 20px auto;
    background: #f846bde9;
    border-radius: 10px;
    padding: 10px;
    box-shadow: 0 4px 8px rgba(10, 180, 95, 0.772);
}

.chat-box {
    max-height: 300px; /* 高さ制限 */
    overflow-y: auto;  /* 縦スクロールを可能に */
    padding: 10px;
    border: 1px solid #f7ef09;
    background: rgb(255, 232, 131);
}

.message {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    border: 1px solid #8ff120;
    background: rgb(111, 246, 242);
}

.message .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
}

.message .text {
    max-width: 60%;
    padding: 8px 12px;
    border-radius: 10px;
    font-size: 14px;
}

/* 自分のコメント（右側） */
.comment.self {
    align-self: flex-end;
    background-color: #dcf8c6;
    text-align: right;
}

/* 他人のコメント（左側） */
.comment.other {
    align-self: flex-start;
    background-color: #f1f1f1;
    text-align: left;
}

/* 吹き出しの三角形 */
.comment::after {
    content: "";
    position: absolute;
    border-style: solid;
    display: block;
    width: 0;
}

/* 自分の吹き出し（三角形） */
.comment.self::after {
    border-width: 10px 0 10px 10px;
    border-color: transparent transparent transparent #dcf8c6;
    right: -10px;
    top: 10px;
}

/* 他人の吹き出し（三角形） */
.comment.other::after {
    border-width: 10px 10px 10px 0;
    border-color: transparent #f1f1f1 transparent transparent;
    left: -10px;
    top: 10px;
}

.timestamp {
    font-size: 0.6em;
    color: #666;
}

.sent {
    flex-direction: row-reverse;
}

.sent .text {
    background-color: #dcf8c6;
    align-self: flex-end;
}

.received .text {
    background-color: #ffffff;
    border: 1px solid #ddd;
}
