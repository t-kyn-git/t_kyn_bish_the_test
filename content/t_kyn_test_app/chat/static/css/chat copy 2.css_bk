/* 全体のチャットレイアウト */
.chat-container {
    width: 100%;
    max-width: 500px;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* チャットボックス（スクロール可能） */
.chat-box {
    width: 100%;
    max-height: 400px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 10px;
    background-color: #f9f9f9;
}

/* 吹き出し全体 */
.comment {
    max-width: 80%;
    padding: 10px;
    border-radius: 10px;
    font-size: 14px;
    word-wrap: break-word;
    position: relative;
}

/* 自分のコメント（右側・緑色） */
.comment.self {
    align-self: flex-end;
    background-color: #dcf8c6;
    text-align: right;
}

/* 他人のコメント（左側・グレー） */
.comment.other {
    align-self: flex-start;
    background-color: #f1f1f1;
    text-align: left;
}

/* 吹き出しの三角形（デフォルト） */
.comment::after {
    content: "";
    position: absolute;
    border-style: solid;
    width: 0;
    height: 0;
}

/* 自分の吹き出し（三角形） */
.comment.self::after {
    border-width: 10px 0 10px 10px;
    border-color: transparent transparent transparent #dcf8c6;
    right: -10px;
    top: 10px;
}

/* 他人の吹き出し（三角形） */
.comment.other::after {
    border-width: 10px 10px 10px 0;
    border-color: transparent #f1f1f1 transparent transparent;
    left: -10px;
    top: 10px;
}

/* タイムスタンプのスタイル */
.timestamp {
    font-size: 10px;
    color: gray;
    display: block;
    margin-top: 5px;
}

/* 入力フォーム */
.message-input {
    width: 80%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
}

/* 送信ボタン */
.send-btn {
    padding: 10px 15px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}
