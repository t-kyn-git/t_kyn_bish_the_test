{% load static %}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>Chat</title>
    <link rel="stylesheet" href="{% static 'css/chat.css' %}">
</head>
<body>
    <h1>Chat Room</h1>
    <form method="POST">
        {% csrf_token %}
        <input type="text" name="text" placeholder="Type a message..." required>
        <button type="submit">Send</button>
    </form>

    <!-- chatUIadd -->
    <div class="chat-container">
        <!-- {% for message in messages %}
            <div class="message {% if message.user == request.user %}sent{% else %}received{% endif %}">
                <img src="{{ message.user.profile.image.url }}" alt="Avatar" class="avatar">
                <div class="text">{{ message.text }}</div>
            </div>
        {% endfor %} -->
        {% for comment in comments %}
        <div class="comment {% if comment.is_self %}self{% else %}other{% endif %}">
            <p>{{ comment.text }}</p>
            <span class="timestamp">{{ comment.updated_at }}</span>
        </div>
    <!-- {% endfor %} -->
        <div class="chat-box">
            {% for message in messages %}
            <div class="message">
                <p><strong>{{ message.user.username }}</strong>: {{ message.text }}</p>
                <br>
                <span class="timestamp">
                    作成: {{ message.created_at|date:"Y-m-d H:i" }}  
                </span>
            </div>
            {% endfor %}
        </div>
    </div>
    <!-- chatUIadd -->


    <!-- <ul>
        {% for message in messages %}
            <li>{{ message.user.username }}: {{ message.text }} ({{ message.created_at }})</li>
        {% endfor %}
    </ul> -->

    <a href="/">Home</a>
</body>
</html>
